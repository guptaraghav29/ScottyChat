<head>
    <title>Register</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style type="text/css">
        input {
            min-width: 300px;
            border-radius: 20px;
            margin: 10px;
            padding: 20px;
            font-size: 20px;
        }
    </style>
</head>

<body
    style="text-align: center; padding-top: 100px; background-image: repeating-radial-gradient(rgb(243, 190, 200),#b6c5f1);">
    <h1 class="display-1"> New user? Register here! </h1>

    {{#if err }}
    <h3> {{ err }} </h3>
    {{/if}}

    <form action="/register" method="post">
        <label> Email: </label>
        <input id="userInput1" name="email" placeholder="john@appleseed.com">
        <label> Password: </label>
        <input id="userInput6" name="password" placeholder="p@ssw1rd">
        <br>
        <label> First Name: </label>
        <input id="userInput2" name="first" placeholder="Johnny">
        <label> Last Name: </label>
        <input id="userInput3" name="last" placeholder="Appleseed">
        <label> Birthday: </label>
        <input id="userInput4" name="birthday" placeholder="YYYY-MM-DD">
        <br>
        <label> Phone Number: </label>
        <input id="userInput5" name="phone" placeholder="xxx-xxx-xxx">
        <button id="send" type="submit">Send</button>
    </form>
    <br>
    <a style="font-size: 20px;" href="/login"> Already have an account? Click here to log in.</a>

</body>